{
  "manifest_version": 2,

  "name": "FlickrTabs2HTML",
  "description": "This extension gets the set of Flickr tabs open in the browser and generates HTML suitable for publication on my blog.",
  "version": "1.0",

  "permissions": [
    "http://api.flickr.com/",
    "tabs",
    "clipboardWrite"
  ],
    
  "page_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
      "default_title" : "Create Flickr gallery"
  },

  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
    
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
    

}
